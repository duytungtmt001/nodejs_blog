
<div class="mt-4">
    <div class="row">
        {{#each movies}}
            <div class="col-sm-6 col-lg-4 card-movie-item">
                    <div class="card" style="width: 18rem;">
                        <a href="/movies/{{this.slug}}">
                            <img src="{{this.image}}" class="card-img-top" alt="...">
                        </a>
                        <div class="card-body">
                            <a href="/movies/{{this.slug}}">
                                <h5 class="card-title">{{this.name}}</h5>
                            </a>
                            <p class="card-text">{{this.year}}</p>
                            <a href="#" class="btn btn-primary">Xem phim</a>
                        </div>
                    </div>
            </div>
        {{/each}}
    </div>
</div>